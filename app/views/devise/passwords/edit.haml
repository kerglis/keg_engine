%h1= t("devise.passwords.change_password")

= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => "form-horizontal" }) do |f|
  = devise_error_messages!
  = f.hidden_field :reset_password_token

  = f.input :password
  = f.input :password_confirmation

  .form-actions
    = f.submit t("devise.passwords.change_password"), :class => "btn btn-primary"
    = render :partial => "devise/shared/links"
